.header {
  position: relative;
  margin: 0 auto;
  width: $content-desktop;

  +desktop-large() {
    width: $content-desktop-large;
  }
  +desktop-largest() {
    width: $content-desktop-largest;
  }
  +tablet-mobile() {
    width: auto;
  }
}

.header-inner {
  position: absolute;
  top: 0;
  overflow: hidden;
  padding: 0;
  width: $sidebar-desktop;
  background: white;
  border-radius: $border-radius-inner;
  margin-top: 10px;

  +desktop-large() {
    .container & { width: $sidebar-desktop; }
  }
  +tablet-mobile() {
    position: relative;
    width: auto;
    border-radius: initial;
  }
}

+tablet-mobile() {
  .header-inner {
    margin-top: inherit;
  }
}

.main {
  clearfix();
}

.container .main-inner {

  +tablet-mobile() {
    width: auto;
  }
}

.content-wrap {
  float: right;
  box-sizing: border-box;
  padding: $content-desktop-padding;
  width: $content-wrap;
  background: white;
  min-height: 700px;
  border-radius: $border-radius-inner;

  +tablet() {
    width: 100%;
    padding: 20px;
    border-radius: initial;
  }
  +mobile() {
    width: 100%;
    padding: 20px;
    min-height: auto;
    border-radius: initial;
  }
}

.sidebar {
  position: static;
  float: left;
  margin-top: -100%;
  width: $sidebar-desktop;
  background: $body-bg-color;

  +tablet-mobile() {
    hide();
  }
}

.sidebar-toggle { display: none; }

.footer-inner {
  padding-left: 260px;

  +tablet-mobile() {
    width: auto;
    padding-left: 0 !important;
    padding-right: 0 !important;
  }
}

.sidebar-position-right {
  .header-inner { right: 0; }
  .content-wrap { float: left; }
  .sidebar { float: right; }

  .footer-inner {
    padding-left: 0;
    padding-right: 260px;
  }
}

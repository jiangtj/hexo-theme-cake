// Menu
// --------------------------------------------------

.menu-item-active a {
  background: #f9f9f9;
  border-bottom-color: white;

  &:after {
    content: " ";
    position: absolute;
    top: 50%;
    margin-top: -3px;
    right: 15px;
    width: 6px;
    height: 6px;
    background-color: $grey;
    circle();
  }
}

.menu {
  margin-top: 20px;
  padding-left: 0;
  text-align: center;
}

.menu .menu-item {
  show();
  margin: 0;
  list-style: none;

  a {
    show();
    position: relative;
    font-size: 13px;
    line-height: inherit;
    border: 0;
    box-sizing: border-box;
    padding: 5px 20px;
    text-align: left;
    transition-property: background-color;
    the-transition();

    &:hover {
      @extend .menu-item-active a;
    }

    disable-touch-hover();
  }

  .fa,.fas,.fab,.far,.fal,.fad {
    margin-right: 5px;
    width: 1.1em;
  }

  svg {
    margin-right: 5px;
    width: 1.1em;
    height: 1.1em;
  }

  // 兼容next主题，后续可能删除
  br {
    display: none;
  }
}

.sub-menu-wrap {
  background-color: white;
  border-radius: .5rem;
}

.sub-menu {
  margin: 0;
  padding: 6px 0;
  border-top: .5px dotted #dedfe1;

  &+ #content > #posts {
    .post-block {
      margin-top: 12px;
      +tablet() {
        margin-top: 10px;
      }
      +mobile() {
        margin-top: 8px;
      }
    }
  }
}

.sub-menu:first-child{
  margin-top: 10px;
  border-top: initial !important;
}

.sub-menu .menu-item {
  display: inline-block !important;

  & a {
    padding: initial !important;
    margin: 5px 10px;
  }

  & a:hover {
    background: initial !important;
    color: $sidebar-highlight;
  }

  & a:after {
    display:none !important;
  }

}

.sub-menu .menu-item-active a {
  background: #fff !important;
  color: $sidebar-highlight;
  &:hover {
    background: #fff !important;
  }
}
